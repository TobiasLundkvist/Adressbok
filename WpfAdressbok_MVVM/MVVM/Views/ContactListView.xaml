<UserControl x:Class="WpfAdressbok_MVVM.MVVM.Views.ContactListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAdressbok_MVVM.MVVM.Views"
             xmlns:viewmodels="clr-namespace:WpfAdressbok_MVVM.MVVM.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewmodels:ContactListViewModel}"
             Background="white"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0" Text="{Binding Title}" FontSize="22" FontWeight="Medium" Margin="0 0 0 50" />

        <ListView Grid.Row="1"  x:Name="ContactsView" ItemsSource="{Binding Contacts}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}" Style="{StaticResource contactRow}">
            <ListView.ItemTemplate >
                <DataTemplate>
                    <StackPanel Margin="4">
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <TextBlock Text="{Binding FirstName}" FontWeight="Bold"/>
                            <TextBlock Text=" " />
                            <TextBlock Text="{Binding LastName}" FontWeight="Bold" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <TextBlock Text="{Binding Email}" FontStyle="Italic"/>
                            <TextBlock Text=", " />
                            <TextBlock Text="{Binding PhoneNumber}" FontStyle="Italic"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <TextBlock Text="{Binding Address}"/>
                            <TextBlock Text=", " />
                            <TextBlock Text="{Binding PostalCode}"/>
                            <TextBlock Text=" " />
                            <TextBlock Text="{Binding City}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource navButton}" Content="Edit"/>
                            <Button Style="{StaticResource navButton}" Content="Remove"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
     
    </Grid>
</UserControl>
